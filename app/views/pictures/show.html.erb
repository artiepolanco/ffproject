<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @picture.title %>
</p>

<p>
  <%= image_tag @picture.url %>
</p>

<p>
  <strong>Github:</strong>
  <%= @picture.github %>
</p>

<p>
  <strong>Like:</strong>
  <%= @picture.like %>
</p>

<p>
  <strong>Description:</strong>
  <%= @picture.description %>
</p>

<h3>Reviews</h3>
<% @picture.reviews.each do |review| %>
  <p>
    <%= review.comment %>
    <br>
    Added on: <%= review.created_at %>
  </p>
<% end %>

<h3>New Review</h3>
<%= render 'reviews/form' %>

<%= link_to 'Edit', edit_picture_path(@picture) %> |
<%= link_to 'Back', pictures_path %>
